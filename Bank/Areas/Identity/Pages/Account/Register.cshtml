@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_Clean_Layout";
}

<h1 class="mx-5 mt-3">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 mx-5">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control mb-2" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control mb-2" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control mb-2" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <input asp-for="Input.UserRole" type="radio" value="Admin" />
            <label asp-for="Input.UserRole">Administrator</label> <br />

            <input asp-for="Input.UserRole" type="radio" value="Cashier" class="mb-3" />
            <label asp-for="Input.UserRole">Cashier</label> <br />
            <button id="registerSubmit" type="submit" class="w-100 btn get-started-btn"><i class="fas fa-plus-circle"></i> Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
