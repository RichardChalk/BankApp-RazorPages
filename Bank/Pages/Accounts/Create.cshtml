@page
@model Bank.Pages.Accounts.CreateModel
@{
    ViewData["Title"] = "Create an account";
}


<section id="customers" class="d-flex align-items-center justify-content-center">
    <div class="container" data-aos="fade-up">
        
        <div class="section-title">
            <h2>Accounts</h2>
            <p id="customer-info">Create an Account</p>
        </div>
    
        @*-------------------------------------------------------------------*@
        
        <div class="card-body custom-table">
            <form method="post">


                <div class="form-group">
                    <label class="my-2 about-text" asp-for="Frequency">Frequency</label>
                    <select class="form-select w-50" asp-for="Frequency" asp-items="@Model.Frequencies" >
                    </select>
                    <span asp-validation-for="Frequency" style="color:red" class="field-validation-error"></span>
                </div>



                <div class="form-group">
                    <label class="my-2 about-text" asp-for="Balance">Balance</label>
                    <input class="form-control w-50 mb-3" asp-for="Balance">
                    <span asp-validation-for="Balance" style="color:red" class="field-validation-error"></span>
                </div>
        

                <button 
                    type="submit" 
                    class="btn get-started-btn text-center button-link"
                    style="font-size:20px">
                    <i class="far fa-save"></i> &nbsp; Save
                </button>

                <button class="btn back-btn mx-3 text-center button-link">
                        <a 
                            asp-page="/Customers/Customer" 
                            asp-route-customerId="@Model.CustomerId">
                            <i class="fas fa-chevron-circle-left"></i> Back
                        </a>
                </button>
            </form>
        </div>
    </div>
</section>

@*Client side validation*@
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



