@page
@model Bank.Pages.Accounts.DepositModel
@{
    ViewData["Title"] = "Deposit";
}


<section id="customer" class="d-flex align-items-center justify-content-center">
    <div class="container" data-aos="fade-up">
        
        <div class="section-title">
            <h2>Account</h2>
            <p id="account-info">Deposit: </p>
            <h5 style="color: white">Account number: @Model.Deposit.Account.AccountId</h5>
            <h5 style="color: #ffc451">Balance: @Model.Deposit.Account.Balance kr</h5>
        </div>

        <div class="card-body custom-table">
            <form method="post">
                <div class="form-group">
                    <label class="mb-3" style="color:white" asp-for="Amount">Amount (Kr)</label>
                    <input class="form-control w-50 mb-3" asp-for="Amount" />
                    <span class="field-validation-error" style="color:red" asp-validation-for="Amount"></span>
                </div>

                <button 
                    type="submit" 
                    class="btn get-started-btn text-center button-link"
                    asp-route-customerId="@Model.Deposit.CustomerId"
                    asp-route-accountId="@Model.Deposit.Account.AccountId"
                    style="font-size:20px">
                    <i class="far fa-plus-square"></i> &nbsp; Deposit
                </button>

                <button class="btn back-btn mx-3 text-center button-link">
                        <a 
                            asp-page="/Customers/Customer" 
                            asp-route-customerId="@Model.Deposit.CustomerId">
                            <i class="fas fa-chevron-circle-left"></i> Back
                        </a>
                </button>
            </form>
        </div>
    </div>
</section>

@*Client side validation*@
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
